<h2>Login Page</h2>

<% if flash[:error] %>
  
    <strong>
    <%= flash[:error] %>
    </strong>
    <br>
<% end %>
    <br>
    
<%= form_with url: login_path, local: true do |f| %>

    <%= f.label :email %>
    <br>
    <%= f.text_field :email %>
    <br><br>

    <%= f.label :password %>
    <br>
    <%= f.password_field :password %>
    <br><br>

    <%= f.submit 'Login' %>
<% end %>